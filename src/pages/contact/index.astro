---
import ContactLayout from "@layouts/ContactLayout.astro"
import ContactCard from "@components/ContactCard.astro"
import { SITE, CONTACT } from "@consts"
import TopLayout from "@layouts/TopLayout.astro"

const contact = [
  { 
    text: "Email", 
    icon: "email", 
    href: "mailto:hi@jar.tf" 
  },
  { 
    text: "Pronouns.page", 
    icon: "pronounspage", 
    href: "https://en.pronouns.page/@jerryv" 
  },
  { 
    text: "GitHub", 
    icon: "github", 
    href: "https://github.com/jartf" 
  },
  { 
    text: "GitLab", 
    icon: "gitlab", 
    href: "https://gitlab.com/jartf" 
  },
  { 
    text: "Google Developer", 
    icon: "gdev", 
    href: "https://g.dev/jarema" 
  },
  { 
    text: "Discord", 
    icon: "discord", 
    href: "https://discord.com/users/490457129090547733" 
  },
  { 
    text: "Telegram", 
    icon: "telegram", 
    href: "https://t.me/jarema_me" 
  },
  { 
    text: "Twitter / X", 
    icon: "twitter-x", 
    href: "https://twitter.com/jartf_" 
  },
]
---

<ContactLayout title="Contact" description={SITE.DESCRIPTION}>
  <TopLayout>
    <div class="animate page-heading">
      {CONTACT.TITLE}
    </div>
  </TopLayout>

  <div class="relative bg-white dark:bg-black">
    <div class="mx-auto max-w-screen-sm p-5 space-y-8 pb-16">

      <!-- About Section -->
      <section class="animate">
        <div>
          <p>If you want to get in touch with me about something or just to say hi, reach out on social media or send me an email. I'll get back to you as soon as possible.</p>
        </div>
      </section>

      <!-- Tech Stack Section -->
      <section class="animate">
        <div>
          <p class="font-semibold text-black dark:text-white">
            Contact methods
          </p>
          <div class="flex flex-wrap items-center gap-2 mt-5">
            {contact.map(item => (
              <ContactCard 
                text={item.text}
                icon={item.icon}
                href={item.href}
              />
            ))}
          </div>
        </div>
      </section>
    </div>
  </div>
</PageLayout>
