---
type Props = {
  text: string
  icon: string
  href: string
}

const { text, icon, href } = Astro.props
---

<a href={href} target="_blank" class="px-3 py-4 flex group rounded border gap-2 items-center border-neutral-200 justify-center dark:border-neutral-700 hover:bg-neutral-100 hover:dark:bg-neutral-800 blend">
  <!-- Will add "md:aspect-square md:items-start md:justify-start" when changing layout to squares -->
    <svg class="flex-none md:w-8 md:h-8 w-5 h-5">
      <use href={`/contact.svg#${icon}`}></use>
    </svg>
  <span class="text-sm text-neutral-500 dark:text-neutral-400 group-hover:text-black group-hover:dark:text-white blend">
    {text}
  </span>
</a>